<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:titleTextColor="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <include layout="@layout/toolsbar" />

                    </LinearLayout>


                </android.support.v7.widget.Toolbar>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/img_slideshow_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_slide_header_layout">

                        <com.zanlabs.widget.infiniteviewpager.InfiniteViewPager
                            android:id="@+id/viewpager2"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:visibility="visible" />

                        <com.zanlabs.widget.infiniteviewpager.indicator.CirclePageIndicator
                            android:id="@+id/indicator2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:fillColor="@color/colorPrimary"
                            app:pageColor="@color/colorPrimary" />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ls_news"
                            android:layout_width="270dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#48b0c5"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:id="@+id/badge3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/badge2"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:id="@+id/relative_layout2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/img_news"
                                            android:layout_width="48dp"
                                            android:layout_height="55dp"
                                            android:layout_marginTop="7dp"
                                            android:src="@drawable/ic_news" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/badge_notification_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/relative_layout2"
                                        android:layout_marginTop="4dp"
                                        android:background="@drawable/badge_item_count"
                                        android:text="0"
                                        android:textColor="#FFF"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/badge_notification_4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/relative_layout2"
                                        android:layout_marginTop="4dp"
                                        android:background="@drawable/badge_item_count"
                                        android:text="0"
                                        android:textColor="#FFF"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                </RelativeLayout>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3sp"
                                    android:gravity="center"
                                    android:text="ข่าวสาร"
                                    android:textColor="@color/color_whith"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ls_know"
                            android:layout_width="270dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#e6615c"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/img_art"
                                android:layout_width="48dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_idea" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:gravity="center"
                                android:text="ความรู้"
                                android:textColor="@color/color_whith"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ls_semena"
                            android:layout_width="270dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#6bc1a4"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_train"
                                android:layout_width="48dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_seminars" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="สัมมนา"
                                android:textColor="@color/color_whith"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ls_spare_part"
                            android:layout_width="270dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#fec72e"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_vender"
                                android:layout_width="48dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_spare_parts" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="สินค้า"
                                android:textColor="@color/color_whith"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:visibility="visible" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ls_history"
                            android:layout_width="270dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="#89a1ae"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#48b0c5"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:id="@+id/badge_history"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/badge2"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:id="@+id/relative_layout_history"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="55dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="7dp"
                                            android:src="@drawable/log" />
                                    </RelativeLayout>


                                    <TextView
                                        android:id="@+id/badge_notification_history_vender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/relative_layout_history"
                                        android:layout_marginTop="4dp"
                                        android:background="@drawable/badge_noti_count_history"
                                        android:text="0"
                                        android:textColor="#FFF"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />


                                    <TextView
                                        android:id="@+id/badge_notification_history_customer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/relative_layout_history"
                                        android:layout_marginTop="4dp"
                                        android:background="@drawable/badge_noti_count_history_customer"
                                        android:text="0"
                                        android:textColor="#FFF"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:visibility="visible" />


                                </RelativeLayout>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:gravity="center"
                                    android:text="การซื้อ-ขาย"
                                    android:textColor="@color/color_whith"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ls_service"
                            android:layout_width="270dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_icon"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/img_help"
                                android:layout_width="48dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_pmii" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="ช่วยเหลือ"
                                android:textColor="@color/color_black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="IS Group 2016 © All Rights Reserved."
                        android:textColor="@color/color_whith"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="264dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF"
        android:clickable="true"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:paddingLeft="16dp"
        android:theme="@style/AppTheme.NavigationView"
        app:headerLayout="@layout/header"
        app:insetForeground="#44383838"
        app:itemBackground="@drawable/menu_background_color"
        app:itemIconTint="@color/color_black"
        app:itemTextColor="@color/menu_text_color"
        app:menu="@menu/activity_main_drawer">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
